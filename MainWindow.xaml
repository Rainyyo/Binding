<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:WpfTest"        
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Click_ShowWindow" Content="Click ShowWindow" Grid.Column="0" Width="150" Height="100" Click="ShowWindow_Click"/>
            <Button x:Name="Binding_ShowWindow" Content="Binding ShowWindow" Grid.Column="1" Width="150" Height="100"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Foreground="LightBlue" FontSize="25" FontWeight="Heavy" Content="{Binding NowTime,FallbackValue=1111111111}" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" FontSize="25"  Foreground="SeaGreen" Text="{Binding NowTime,FallbackValue=2222222222}" FontWeight="Heavy" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" Content="{Binding MyText}" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Foreground="GreenYellow"/>
            <TextBox x:Name="TB_1" Grid.Column="1" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center" Width="150" Text="{Binding MyText,UpdateSourceTrigger=PropertyChanged}"  />
        </Grid>

    </Grid>
</Window>
